<script>
    function screenSize() {


        //paddile change when based on scrollbar active or not

        let scrollBar = document.getElementById('chapter')
        let hBar = scrollBar.scrollWidth > scrollBar.clientWidth;
        if (hBar) {
            document.getElementById('left-paddle').style.display = 'block'
            document.getElementById('right-paddle').style.display = 'block'
        } else {
            document.getElementById('left-paddle').style.display = 'none'
            document.getElementById('right-paddle').style.display = 'none'
        }


        //iphone banner
        if (screen.width < 735) {
            var imacImage = document.querySelector("#imacImage").src = "images/iphone_12__d51ddqcc7oqe_small_2x.jpg";
            document.querySelector("#iphone12proImage").src = "images/iphone_12_pro__f7wokw1n4lm6_small_2x.jpg";
            //ios image
            document.querySelector("#ios-banner").src = "images/ios15_preview__f7lrpcnc3eum_small_2x.jpg";

        }
        else {
            var imacImage = document.querySelector("#imacImage").src = "images/iphone_12__d51ddqcc7oqe_large.jpg";
            document.querySelector("#iphone12proImage").src = "images/iphone_12_pro__f7wokw1n4lm6_large.jpg";
            //ios-image
            document.querySelector("#ios-banner").src = "images/ios15_preview__f7lrpcnc3eum_large_2x.jpg";

        }

    }

    // activat paddi 
    var scrollBar = document.getElementById('chapter')
    var hBar = scrollBar.scrollWidth > scrollBar.clientWidth;
    if (hBar) {
        document.getElementById('left-paddle').style.display = 'block'
        document.getElementById('right-paddle').style.display = 'block'
    } else {
        document.getElementById('left-paddle').style.display = 'none'
        document.getElementById('right-paddle').style.display = 'none'
    }

    //iphone banner
    if (screen.width < 735) {
        var imacImage = document.querySelector("#imacImage").src = "images/iphone_12__d51ddqcc7oqe_small_2x.jpg";
        document.querySelector("#iphone12proImage").src = "images/iphone_12_pro__f7wokw1n4lm6_small_2x.jpg";

    }
    else {
        var imacImage = document.querySelector("#imacImage").src = "images/iphone_12__d51ddqcc7oqe_large.jpg";
        document.querySelector("#iphone12proImage").src = "images/iphone_12_pro__f7wokw1n4lm6_large.jpg";

    }

</script>
