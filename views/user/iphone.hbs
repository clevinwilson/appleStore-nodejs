<script>
    //paddle button scrolling function 
    var leftButton = document.querySelector('.left-paddle');
    leftButton.addEventListener('click', () => {
        document.getElementById('chapter').scrollLeft -= 250;
    })
    var rightButton = document.querySelector('.right-paddle');
    rightButton.addEventListener('click', () => {
        document.getElementById('chapter').scrollLeft += 250;
    })
</script>

